<% title t("user_sessions.new.page_title") %>

<% form_for @user_session, :url => user_session_path do |f| %>
  <%= f.error_messages %>
  <div class="span-3 prepend-1">
  <%= f.label :login %>
  </div>
  <div class="span-12 last">
  <%= f.text_field :login %>
  </div>

  <div class="span-3 prepend-1">
  <%= f.label :password %>
  </div>
  <div class="span-12 last">
  <%= f.password_field :password %>
  </div>

  <div class="span-3 prepend-1">
  <% # = f.label :remember_me %>
  </div>
  <div class="span-12 last">
  <% # = f.check_box :remember_me %>
  </div>

  <div class="prepend-4 span-12 last">
  <%= f.submit t("user_sessions.new.login_button") %>
  </div>
<% end %>
