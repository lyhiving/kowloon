<% title t("users.new.page_title") %>

<% # form_for @user do |f| %>
<% form_for @user, :url => account_url do |f| %>
  <%= f.error_messages %>
  <% # = render :partial => "form", :object => f %>
  <div class="span-3 prepend-1">
  <%= f.label :login %>
  </div>
  <div class="span-12 last">
  <%= f.text_field :login %>
  </div>
  <div class="span-3 prepend-1">
  <%= f.label :email %>
  </div>
  <div class="span-12 last">
  <%= f.text_field :email %>
  </div>
  <div class="prepend-4 span-12 last">
  <%= f.submit t("users.new.register_button") %>
  </div>
<% end %>

